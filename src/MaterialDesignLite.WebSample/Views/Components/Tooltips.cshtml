@{

    ViewBag.Page = new[] { "Components", "Tooltips" };

    ViewBag.Header = new Header
    {
        BgColor = MDLColors.Yellow,
        Title = "Tooltips",
        SubTitle = "blabla"
    };
}


<mdl-card mdl-shadow="@MdlShadows.Dp2">

    <mdl-card-title title="Simple Tooltip"></mdl-card-title>

    <mdl-grid>
        <mdl-cell size="3">
            <a href="#" mdl-tooltips="tooltips on link">
                Some awesome link
            </a>

        </mdl-cell>
        <mdl-cell size="3">
            <mdl-button icon="true" mdl-tooltips="Add">
                <mdl-icon icon="@MDLIcons.add"></mdl-icon>
            </mdl-button>

        </mdl-cell>
        <mdl-cell size="3">
            <mdl-button mdl-tooltips="Click me !">
                button
            </mdl-button>

        </mdl-cell>
        <mdl-cell size="3">
            <!-- Large Tooltip -->
            <mdl-icon icon="@MDLIcons.print" mdl-tooltips="Print" mdl-tooltips-large="true"></mdl-icon>

        </mdl-cell>

    </mdl-grid>
    <pre><code class="language-markup">
    </code>
</pre>

    <mdl-card-title title="Rich Tooltip"></mdl-card-title>

    <mdl-grid>
        <mdl-cell size="4"></mdl-cell>
            <mdl-cell size="4">
                <div id="tt3" class="icon material-icons">cloud_upload</div>
                <mdl-tooltips for="tt3"> <mdl-icon size="16" icon="@MDLIcons.add"/> Upload <strong mdl-color="@MDLColors.Yellow">file.zip</strong></mdl-tooltips>

            </mdl-cell>
            <mdl-cell size="4">
                <!-- Multiline Tooltip -->
                <div id="tt4" class="icon material-icons">share</div>
                <div class="mdl-tooltip" for="tt4">
                    Share your content<br>via social media
                </div>
            </mdl-cell>

</mdl-grid>

    <pre><code class="language-markup">
    </code>
</pre>
</mdl-card>
