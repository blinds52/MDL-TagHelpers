@{
    ViewBag.Page = new[] { "Components", "Text fields" };
    ViewBag.Header = new Header
    {
        BgColor = MDLColors.LightGreen,
        Title = "Text fields",
        SubTitle = "blabla"
    };
}
<mdl-card mdl-shadow="@MdlShadows.Dp2">

    <mdl-card-title title="Simple Text fields"></mdl-card-title>
    <mdl-card-supporting-text>
        <mdl-grid>

            <mdl-cell>
                <mdl-textfield label="Text..." floating-label="false"/>
            </mdl-cell>

            <mdl-cell>
                <mdl-textfield label="Number..." error-message="Input is not a number!" pattern="-?[0-9]*(\.[0-9]+)?" floating-label="false"/>
            </mdl-cell>

            <mdl-cell>
                <mdl-textfield label="I'm Disabled" id="disabled1" disabled="" value="Hello I'm a disabled field" floating-label="false"/>
            </mdl-cell>
        </mdl-grid>

    </mdl-card-supporting-text>

    <mdl-card-title title="Floating Label"></mdl-card-title>

    <mdl-card-supporting-text>
        <mdl-grid>

            <mdl-cell>
                <mdl-textfield label="Text..."/>
                
            </mdl-cell>

            <mdl-cell>
                <mdl-textfield label="Number..." error-message="Input is not a number!" pattern="-?[0-9]*(\.[0-9]+)?" floating-label="true"/>

            </mdl-cell>

            <mdl-cell>
                <mdl-textfield label="I'm Disabled" id="sample3" disabled value="Hello I'm a disabled field"/>
            </mdl-cell>
        </mdl-grid>

    </mdl-card-supporting-text>

    <mdl-card-title title="Multiline"></mdl-card-title>

    <mdl-card-supporting-text>
        <mdl-grid>

            <mdl-cell>
                <mdl-textarea rows="3" label="Text lines..." floating-label="false"/>
               
            </mdl-cell>

            <mdl-cell>
                <mdl-textarea rows="3" label="Text lines..." row="1" floating-label="false"/>

            </mdl-cell>

            <mdl-cell>
                <mdl-textarea rows="3" label="Text lines..." maxrows="3" row="1" value="3dsfasdfas" />

            </mdl-cell>
        </mdl-grid>

    </mdl-card-supporting-text>

    <mdl-card-title title="Expandable "></mdl-card-title>

    <mdl-card-supporting-text>
        <mdl-grid>

            <mdl-cell>

                <mdl-textfield label="Expandable Input" expendable-icon="@MDLIcons.search" floating-label="false"></mdl-textfield>
            </mdl-cell>
            <mdl-cell>
                <mdl-textfield label="Expandable Input" expendable-icon="@MDLIcons.search" floating-label="true"></mdl-textfield>
            </mdl-cell>
            <mdl-cell>

                <mdl-textfield mdl-color="@MDLColors.Red.WithBritghness800"  label="Expandable Input" disabled expendable-icon="@MDLIcons.do_not_disturb" floating-label="true"></mdl-textfield>
            </mdl-cell>

</mdl-grid>

    </mdl-card-supporting-text>

</mdl-card>
