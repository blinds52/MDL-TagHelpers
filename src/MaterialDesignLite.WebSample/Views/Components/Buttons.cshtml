@using MaterialDesignLite.WebSample.ViewModels
@{

    ViewBag.Page = new[] { "Components", "Buttons" };

    ViewBag.Header = new Header
    {
        BgColor = MDLColors.Pink,
        Title = "Buttons",
        SubTitle = "There are 3 main button types described in material design. Raised Button, Floating circular action button & Flat buttons."
    };
}

<mdl-card mdl-shadow="@MdlShadows.Dp2">

    <mdl-card-title title="Flat button"></mdl-card-title>
    <mdl-card-supporting-text>
        <mdl-grid>

            <mdl-cell>
                <mdl-card-title subtitle="Default"></mdl-card-title>

                <mdl-button>Button</mdl-button>
                <mdl-button ripple="false">No Ripple</mdl-button>
                <mdl-button disabled>Disabled</mdl-button>
                <mdl-button color="@ButtonColors.Primary">Primary</mdl-button>
                <mdl-button color="@ButtonColors.Accent">Accent</mdl-button>
            </mdl-cell>

            <mdl-cell>
                <mdl-card-title subtitle="With colors"></mdl-card-title>

                <mdl-button mdl-color="@MDLColors.Green">Success</mdl-button>
                <mdl-button mdl-color="@MDLColors.LightBlue">Info</mdl-button>
                <mdl-button mdl-color="@MDLColors.Orange">Warning</mdl-button>
                <mdl-button mdl-color="@MDLColors.Red">Danger</mdl-button>
            </mdl-cell>

            <mdl-cell>
                <mdl-card-title subtitle="With icons"></mdl-card-title>

                <mdl-button><mdl-icon icon="@MDLIcons.add"></mdl-icon></mdl-button>
                <mdl-button ripple="false"><mdl-icon icon="@MDLIcons.image"></mdl-icon></mdl-button>
                <mdl-button disabled><mdl-icon icon="@MDLIcons.done"></mdl-icon></mdl-button>
                <mdl-button color="@ButtonColors.Primary"><mdl-icon icon="@MDLIcons.label"></mdl-icon></mdl-button>
                <mdl-button color="@ButtonColors.Accent"><mdl-icon icon="@MDLIcons.label_outline"></mdl-icon></mdl-button>
            </mdl-cell>
        </mdl-grid>

    </mdl-card-supporting-text>

    <pre><code class="language-markup">
&lt;!-- Flat button with ripple effect --&gt;
&lt;mdl-button&gt;Button&lt;/mdl-button&gt; 
          
&lt;!-- Ripple effect disable--&gt;                         
&lt;mdl-button ripple="false"&gt;Button&lt;/mdl-button&gt;
&lt;!-- Button disable--&gt;              
&lt;mdl-button disabled&gt;Button&lt;/mdl-button&gt;          
                   
&lt;!-- Button with primary color--&gt;    
&lt;mdl-button color="@@ButtonColors.Primary"&gt;Button&lt;/mdl-button&gt;
        
&lt;!-- Button with primary color--&gt; 
&lt;mdl-button color="@@ButtonColors.Accent"&gt;Button&lt;/mdl-button&gt; 
    </code>
</pre>

    <mdl-card-title title="Raised button"></mdl-card-title>
    <mdl-card-supporting-text>
        <mdl-grid>
            <mdl-cell>
                <mdl-card-title subtitle="Default"></mdl-card-title>

                <mdl-button raised="true">Button</mdl-button>
                <mdl-button raised="true" ripple="false">Button</mdl-button>
                <mdl-button raised="true" disabled>Button</mdl-button>
                <mdl-button raised="true" color="@ButtonColors.Primary">Button</mdl-button>
                <mdl-button raised="true" color="@ButtonColors.Accent">Button</mdl-button>
            </mdl-cell>

            <mdl-cell>
                <mdl-card-title subtitle="With colors"></mdl-card-title>

                <mdl-button raised="true" mdl-color="@MDLColors.PrimaryContrast" mdl-bgcolor="@MDLColors.Green">Success</mdl-button>

                <mdl-button raised="true" mdl-color="@MDLColors.PrimaryContrast" mdl-bgcolor="@MDLColors.LightBlue">Info</mdl-button>
                <mdl-button raised="true" mdl-color="@MDLColors.PrimaryContrast" mdl-bgcolor="@MDLColors.Orange">Warning</mdl-button>
                <mdl-button raised="true" mdl-color="@MDLColors.PrimaryContrast" mdl-bgcolor="@MDLColors.Red">Danger</mdl-button>
            </mdl-cell>
            <mdl-cell>
                <mdl-card-title subtitle="With icons"></mdl-card-title>

                <mdl-button raised="true"><mdl-icon icon="@MDLIcons.fast_rewind"></mdl-icon></mdl-button>
                <mdl-button raised="true" color="@ButtonColors.Primary"><mdl-icon icon="@MDLIcons.play_arrow"></mdl-icon></mdl-button>
                <mdl-button raised="true"><mdl-icon icon="@MDLIcons.fast_forward"></mdl-icon></mdl-button>
            </mdl-cell>

        </mdl-grid>
    </mdl-card-supporting-text>

    <pre><code class="language-markup">
&lt;!-- Raised button with ripple effect --&gt;
&lt;mdl-button raised="true"&gt;Button&lt;/mdl-button&gt; 
          
&lt;!-- Ripple effect disable--&gt;                         
&lt;mdl-button raised="true" ripple="false"&gt;Button&lt;/mdl-button&gt;
&lt;!-- Button disable--&gt;              
&lt;mdl-button raised="true" disabled&gt;Button&lt;/mdl-button&gt;          
                   
&lt;!-- Button with primary color--&gt;    
&lt;mdl-button raised="true" color="@@ButtonColors.Primary"&gt;Button&lt;/mdl-button&gt;
        
&lt;!-- Button with primary color--&gt; 
&lt;mdl-button raised="true" color="@@ButtonColors.Accent"&gt;Button&lt;/mdl-button&gt; 
    </code>
</pre>

    <mdl-card-title title="Icon buttons"></mdl-card-title>
    <mdl-card-supporting-text>
        <mdl-grid>
            <mdl-cell>
                <mdl-card-title subtitle="Default"></mdl-card-title>
                <mdl-button icon="true"><mdl-icon icon="@MDLIcons.add"></mdl-icon></mdl-button>

                <mdl-button icon="true" ripple="false"><mdl-icon icon="@MDLIcons.image"></mdl-icon></mdl-button>
                <mdl-button icon="true" disabled><mdl-icon icon="@MDLIcons.smartphone"></mdl-icon></mdl-button>
                <mdl-button icon="true" color="@ButtonColors.Primary"><mdl-icon icon="@MDLIcons.mood"></mdl-icon></mdl-button>
                <mdl-button icon="true" color="@ButtonColors.Accent"><mdl-icon icon="@MDLIcons.mood_bad"></mdl-icon></mdl-button>

            </mdl-cell>

            <mdl-cell>
                <mdl-card-title subtitle="With colors"></mdl-card-title>

                <mdl-button mdl-color="@MDLColors.Green" icon="true"><mdl-icon icon="@MDLIcons.plus_one"></mdl-icon></mdl-button>
                <mdl-button mdl-color="@MDLColors.LightBlue" icon="true"><mdl-icon icon="@MDLIcons.group"></mdl-icon></mdl-button>
                <mdl-button mdl-color="@MDLColors.Orange" icon="true"><mdl-icon icon="@MDLIcons.whatshot"></mdl-icon></mdl-button>
                <mdl-button mdl-color="@MDLColors.Red" icon="true"><mdl-icon icon="@MDLIcons.school"></mdl-icon></mdl-button>


            </mdl-cell>
            <mdl-cell>
                <mdl-card-title subtitle="With background colors"></mdl-card-title>

                <mdl-button mdl-bgcolor="@MDLColors.Green" icon="true"><mdl-icon icon="@MDLIcons.plus_one"></mdl-icon></mdl-button>
                <mdl-button mdl-bgcolor="@MDLColors.LightBlue" icon="true"><mdl-icon icon="@MDLIcons.group"></mdl-icon></mdl-button>
                <mdl-button mdl-bgcolor="@MDLColors.Orange" icon="true"><mdl-icon icon="@MDLIcons.whatshot"></mdl-icon></mdl-button>
                <mdl-button mdl-bgcolor="@MDLColors.Red" icon="true"><mdl-icon icon="@MDLIcons.school"></mdl-icon></mdl-button>
            </mdl-cell>

        </mdl-grid>
    </mdl-card-supporting-text>

    <pre><code class="language-markup">
&lt;!-- Icon button with ripple effect --&gt;
&lt;mdl-button icon="true"&gt;&lt;mdl-icon icon="@@MDLIcons.add"&gt;&lt;/mdl-icon&gt;&lt;/mdl-button&gt;
         
&lt;!-- Ripple effect disable--&gt;                         
&lt;mdl-button icon="true" ripple="false"&gt;&lt;mdl-icon icon="@@MDLIcons.image"&gt;&lt;/mdl-icon&gt;&lt;/mdl-button&gt;
&lt;!-- Button disable--&gt;              
&lt;mdl-button icon="true" disabled&gt;&lt;mdl-icon icon="@@MDLIcons.smartphone"&gt;&lt;/mdl-icon&gt;&lt;/mdl-button&gt;
                    
&lt;!-- Button with primary color--&gt;    
&lt;mdl-button icon="true" color="@@ButtonColors.Primary"&gt;&lt;mdl-icon icon="@@MDLIcons.mood"&gt;&lt;/mdl-icon&gt;&lt;/mdl-button&gt;
      
&lt;!-- Button with primary color--&gt; 
&lt;mdl-button icon="true" color="@@ButtonColors.Accent"&gt;&lt;mdl-icon icon="@@MDLIcons.mood_bad"&gt;&lt;/mdl-icon&gt;&lt;/mdl-button&gt;
 
    </code>
</pre>


    <mdl-card-title title="FAB button"></mdl-card-title>

    <mdl-card-supporting-text>
        <mdl-grid>
            <mdl-cell>
                <mdl-card-title subtitle="Default"></mdl-card-title>
                <mdl-button fab="true"><mdl-icon icon="@MDLIcons.add"></mdl-icon></mdl-button>
                <mdl-button fab="true" ripple="false"><mdl-icon icon="@MDLIcons.image"></mdl-icon></mdl-button>
                <mdl-button fab="true" disabled><mdl-icon icon="@MDLIcons.smartphone"></mdl-icon></mdl-button>
                <mdl-button fab="true" color="@ButtonColors.Primary"><mdl-icon icon="@MDLIcons.mood"></mdl-icon></mdl-button>
                <mdl-button fab="true" color="@ButtonColors.Accent"><mdl-icon icon="@MDLIcons.mood_bad"></mdl-icon></mdl-button>

            </mdl-cell>

            <mdl-cell>
                <mdl-card-title subtitle="With colors"></mdl-card-title>

                <mdl-button mdl-color="@MDLColors.Green" fab="true"><mdl-icon icon="@MDLIcons.plus_one"></mdl-icon></mdl-button>
                <mdl-button mdl-color="@MDLColors.LightBlue" fab="true"><mdl-icon icon="@MDLIcons.group"></mdl-icon></mdl-button>
                <mdl-button mdl-color="@MDLColors.Orange" fab="true"><mdl-icon icon="@MDLIcons.whatshot"></mdl-icon></mdl-button>
                <mdl-button mdl-color="@MDLColors.Red" fab="true"><mdl-icon icon="@MDLIcons.school"></mdl-icon></mdl-button>


            </mdl-cell>
            <mdl-cell>
                <mdl-card-title subtitle="With background colors"></mdl-card-title>

                <mdl-button mdl-bgcolor="@MDLColors.Green" fab="true"><mdl-icon icon="@MDLIcons.plus_one"></mdl-icon></mdl-button>
                <mdl-button mdl-bgcolor="@MDLColors.LightBlue" fab="true"><mdl-icon icon="@MDLIcons.group"></mdl-icon></mdl-button>
                <mdl-button mdl-bgcolor="@MDLColors.Orange" fab="true"><mdl-icon icon="@MDLIcons.whatshot"></mdl-icon></mdl-button>
                <mdl-button mdl-bgcolor="@MDLColors.Red" fab="true"><mdl-icon icon="@MDLIcons.school"></mdl-icon></mdl-button>
            </mdl-cell>

            <mdl-cell>
                <mdl-card-title subtitle="Mini"></mdl-card-title>

                <mdl-button mini="true" fab="true"><mdl-icon icon="@MDLIcons.add"></mdl-icon></mdl-button>
                <mdl-button mini="true" fab="true" ripple="false"><mdl-icon icon="@MDLIcons.image"></mdl-icon></mdl-button>
                <mdl-button mini="true" fab="true" disabled><mdl-icon icon="@MDLIcons.smartphone"></mdl-icon></mdl-button>
                <mdl-button mini="true" fab="true" color="@ButtonColors.Primary"><mdl-icon icon="@MDLIcons.mood"></mdl-icon></mdl-button>
                <mdl-button mini="true" fab="true" color="@ButtonColors.Accent"><mdl-icon icon="@MDLIcons.mood_bad"></mdl-icon></mdl-button>
            </mdl-cell>

        </mdl-grid>
    </mdl-card-supporting-text>

    <pre><code class="language-markup">
&lt;!-- FAB button with ripple effect --&gt;
&lt;mdl-button fab="true"&gt;&lt;mdl-icon icon="@@MDLIcons.add"&gt;&lt;/mdl-icon&gt;&lt;/mdl-button&gt;
         
&lt;!-- Ripple effect disable--&gt;                         
&lt;mdl-button fab="true" ripple="false"&gt;&lt;mdl-icon icon="@@MDLIcons.image"&gt;&lt;/mdl-icon&gt;&lt;/mdl-button&gt;
&lt;!-- Button disable--&gt;              
&lt;mdl-button fab="true" disabled&gt;&lt;mdl-icon icon="@@MDLIcons.smartphone"&gt;&lt;/mdl-icon&gt;&lt;/mdl-button&gt;
                    
&lt;!-- Button with primary color--&gt;    
&lt;mdl-button fab="true" color="@@ButtonColors.Primary"&gt;&lt;mdl-icon icon="@@MDLIcons.mood"&gt;&lt;/mdl-icon&gt;&lt;/mdl-button&gt;
      
&lt;!-- Button with primary color--&gt; 
&lt;mdl-button fab="true" color="@@ButtonColors.Accent"&gt;&lt;mdl-icon icon="@@MDLIcons.mood_bad"&gt;&lt;/mdl-icon&gt;&lt;/mdl-button&gt;
 
&lt;!-- Mini FAB Button--&gt; 
&lt;mdl-button fab="true" color="@@ButtonColors.Accent"&gt;&lt;mdl-icon icon="@@MDLIcons.mood_bad"&gt;&lt;/mdl-icon&gt;&lt;/mdl-button&gt;
    </code>
</pre>

</mdl-card>
