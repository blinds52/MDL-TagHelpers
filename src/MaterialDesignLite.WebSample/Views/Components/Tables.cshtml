<!-- component template -->
<script type="text/x-template" id="grid-template">
    <table class="mdl-data-table mdl-js-data-table @MdlShadows.Dp2">
        <thead>
            <tr>
                <th v-for="key in columns"
                    v-on:click="sortBy(key)"
                    :class="{'mdl-data-table__header--sorted-ascending': sortKey == key && sortOrders[key] > 0 , 
                    'mdl-data-table__header--sorted-descending': sortKey == key && sortOrders[key] < 0 }"
                    class="mdl-data-table__cell--non-numeric">
                    {{key | capitalize}}
                    <span class="arrow"
                          :class="sortOrders[key] > 0 ? 'asc' : 'dsc'">
                    </span>
                </th>
            </tr>
        </thead>
        <tbody>
            <tr v-for="
                entry in data
                | filterBy filterKey
                | orderBy sortKey sortOrders[sortKey]">
                <td class="mdl-data-table__cell--non-numeric" v-for="key in columns">
                    {{entry[key]}}
                </td>
            </tr>
        </tbody>
    </table>
</script>

